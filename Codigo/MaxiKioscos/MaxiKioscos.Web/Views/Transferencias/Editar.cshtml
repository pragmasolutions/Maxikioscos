@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Entidades.Transferencia

<div id="TransferenciasModal" class="modal fade" role="dialog" aria-labelledby="TransferenciasModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.PopupTitulo("Editar Transferencia")
            @using (Html.BeginForm("Editar", "Transferencias", FormMethod.Post, new { id = "FrmCrearTransferencia" }))
            {
                <div class="modal-body">
                    @{Html.RenderPartial("_CamposTransferenciaEditar"); }
                </div>
                <div class="modal-footer">
                    <input type="checkbox" id="chxImprimir"/>
                    <label for="chxImprimir" style="margin-right: 15px;" id="lblImprimir">Imprimir</label>
                    <button type="button" class="btn btn-default btn-aprobar"><span class="glyphicon glyphicon-ok"></span>Aprobar</button>
                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;&nbsp;Editar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
                </div>
            }
        </div>
    </div>
</div>
@Html.Action("Seleccionar", "Productos")
@Html.Partial("IngresarCantidad",0)

<script>
    $(function() {
        $('.modal #OrigenId, .modal #DestinoId').attr('disabled', 'disabled');
        $('#AgregarProducto', '.modal').removeAttr('disabled');
    });
</script>