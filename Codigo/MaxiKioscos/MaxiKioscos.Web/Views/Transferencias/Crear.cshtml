@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Entidades.Transferencia

<div id="TransferenciasModal" class="modal fade" role="dialog" aria-labelledby="TransferenciasModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.PopupTitulo("Crear Transferencia")
            @using (Html.BeginForm("Crear", "Transferencias", FormMethod.Post, new { id = "FrmCrearTransferencia" }))
            {
                <div class="modal-body">
                    @{Html.RenderPartial("_CamposTransferenciaEditar"); }
                </div>
                <div class="modal-footer">
                    @Html.CheckBox("chxImprimir")
                    <label for="chxImprimir" style="margin-right: 15px;" id="lblImprimir">Imprimir</label>
                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;&nbsp;Crear</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
                </div>
            }
        </div>
    </div>
</div>
@Html.Action("Seleccionar", "Productos", new { MostrarStockMaxikioscoId = 0 })
@Html.Partial("IngresarCantidad",new ViewDataDictionary(0))