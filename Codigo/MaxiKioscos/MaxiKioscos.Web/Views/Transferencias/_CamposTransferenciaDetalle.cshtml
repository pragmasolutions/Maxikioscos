@using MaxiKioscos.Web.Comun.Extensiones
@using MaxiKioscos.Web.Configuration
@model MaxiKioscos.Entidades.Transferencia
@Html.HiddenFor(model => model.TransferenciaId)
@Html.HiddenFor(model => model.Identifier)
<div class="row">
    <fieldset class="group">
        <legend>Información de Transferencia</legend>
        <div class="col-lg-3">
            <div class="form-group input-group-sm">
                @Html.LabelFor(model => model.TransferenciaId)
                @Html.DisplayFor(model => model.TransferenciaId)
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                @Html.LabelFor(model => model.FechaCreacion)
                @Html.DisplayFor(model => model.FechaCreacion)
            </div>
        </div>
        <div class="col-lg-3">
            <div>
                @Html.LabelFor(model => model.OrigenId)
                <div class="form-group">
                    @Html.EditorFor(model => model.OrigenId)
                </div>
                @Html.ValidationMessageFor(model => model.OrigenId)
            </div>
        </div>
        <div class="col-lg-3">
            <div>
                @Html.LabelFor(model => model.DestinoId)
                <div class="form-group">
                    @Html.EditorFor(model => model.DestinoId)
                </div>
                @Html.ValidationMessageFor(model => model.DestinoId)
            </div>
        </div>
    </fieldset>
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="TableTransferenciasProductos">
                    <thead>
                        <tr>
                            <th>Cantidad</th>
                            <th>Código</th>
                            <th>style="width: 400px;">Descripción</th>
                            <th>Precio</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transferenciaProd in Model.TransferenciaProductos)
                        {
                            <tr>
                                <td>
                                    <span class="cell-text-content">@transferenciaProd.Cantidad</span>
                                </td>
                                <td class="col-codigo">@transferenciaProd.PrimerCodigoProducto</td>
                                <td>
                                    @transferenciaProd.Producto.Descripcion
                                </td>
                                <td class="text-right">
                                    <span class="cell-text-content">@transferenciaProd.PrecioVentaFormateado</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('.modal #OrigenId, .modal #DestinoId').attr('disabled', 'disabled');
    })
</script>
