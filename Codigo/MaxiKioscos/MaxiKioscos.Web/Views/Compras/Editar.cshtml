@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Entidades.Compra

<div id="ComprasModal" class="modal fade" role="dialog" aria-labelledby="ComprasModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            @Html.PopupTitulo("Editar Compra")
            @using (Html.BeginForm("Editar", "Compras", FormMethod.Post, new { id = "FrmEditarCompra" }))
            {
                <div class="modal-body">
                    @{Html.RenderPartial("_CamposCompraEditar"); }
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;&nbsp;Editar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
                </div>
            }
        </div>
    </div>
</div>
@Html.Action("Seleccionar", "Productos")
@Html.Partial("IngresarCantidad",0)
@Html.Partial("IngresarCostoPrecio", new Tuple<int,int>(0,0))