@using MaxiKioscos.Web.Comun.Extensiones
@using MaxiKioscos.Web.Models
@model MaxiKioscos.Entidades.Compra
@{
    int? cantidadModel = null;
}

<div id="ComprasModal" class="modal fade" role="dialog" aria-labelledby="ComprasModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="width: 1250px">
        <div class="modal-content" style="width: 1250px">
            @Html.PopupTitulo("Crear Compra")
            @using (Html.BeginForm("Crear", "Compras", FormMethod.Post, new {id = "FrmCrearCompra"}))
            {
                <div class="modal-body">
                    @{Html.RenderPartial("_CamposCompraEditar"); }
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;&nbsp;Crear</button>
                    <button id="BtnCancelar" type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
                </div>
            }
        </div>
    </div>
</div>
@Html.Action("Seleccionar", "Productos")
@Html.Partial("EditarProducto",new EditarProductoModel())
<div class="ingresar-costo-precio-container"></div>
