@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Web.Models.IngresarCostoPrecioModel
<div id="IngresarCostoPrecioModal" class="modal fade " tabindex="-1" role="dialog" aria-labelledby="IngresarCostoPrecioModal"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @Html.PopupTitulo("Ingrese Costo y Precio")
            <form id="FrmIngresarCostoPrecio" method="POST">
                <div class="modal-body">
                   @Html.Partial("CamposCostoYPrecio")
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;Ingresar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>
