@model MaxiKioscos.Web.Models.ControlStockDetalleFiltrosModel
<div>
    <div class="row">
        <div class="form-group col-sm-3">
            @Html.TextBoxFor(model => model.Descripcion,
                                            new
                                                {
                                                    @class = "form-control auto-submit input",
                                                    placeholder = Html.DisplayNameFor(model => model.Descripcion)
                                                })
            @Html.HiddenFor(model => model.ControlStockId)
        </div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span>&nbsp;&nbsp;Actualizar</button>
        </div>
    </div>
</div>
