@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Web.Models.ControlStockDetalleListadoModel

@Html.PaginaTitulo("Control de Stock","fa-check-circle-o")
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            
            @if (!Model.ControlStock.Cerrado)
            {
                <div class="panel-heading">
                    <a class="btn btn-default btn-controlStock-cerrar" href="@Url.Action("Cerrar")"><span class="glyphicon glyphicon-check"></span>&nbsp;&nbsp;Cerrar</a>
                </div>
            }
            <div class="panel-body">
                <div class="spacer"></div>
                @Html.Partial("_Detalle", Model.ControlStock)
                
                <div class="hr"></div>
                @Html.Partial("_FiltrosDetalle",Model.Filtros)
                <div class="spacer"></div>
                <div class="spacer"></div>
                @Html.Partial("_ListadoDetalle",Model)
                <div class="spacer"></div>
            </div>
        </div>
    </div>
</div>

@Html.Modal("ControlStockErrorModal")
@Html.Modal("ProductosModal",ModalSize.Large)