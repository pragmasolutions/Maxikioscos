@using MaxiKioscos.Web.Helpers
@model MaxiKioscos.Web.Models.ControlStockFiltrosModel
<div>
    @using (Ajax.BeginForm("Listado", null,
                                           new AjaxOptions()
                                               {
                                                   UpdateTargetId = "ListadoContainer",
                                                   HttpMethod = "GET",
                                                   InsertionMode = InsertionMode.Replace,
                                                   OnBegin = "maxikioscoSpinner.startSpin",
                                                   OnSuccess = "maxikioscoSpinner.stopSpin",
                                                   OnFailure = "maxikioscoSpinner.stopSpin"
                                               },
                                           new { id = "FormularioFiltrosControlStock" }))
    {
        <div class="row">
            <div class="form-group col-sm-4">
                @Html.EditorFor(model => model.MaxiKioscoId)
                @*@Html.SetFocusTo(model => model.MaxiKioscoId)*@
            </div>
            
            <div class="form-group col-sm-4">
                @Html.EditorFor(model => model.RubroId)
            </div>
            
            <div class="form-group col-sm-4">
                @Html.EditorFor(model => model.ProveedorId)
            </div>
        </div>
        
        <div class="row">
            <div class="form-group col-sm-4">
                @Html.EditorFor(model => model.Estado)
            </div>
            
            <div class="form-group col-sm-2 date-container form-group">
                @Html.EditorFor(model => model.Desde)
            </div>
            
            <div class="form-group col-sm-2 date-container form-group">
                @Html.EditorFor(model => model.Hasta)
            </div>

            <div class="form-group col-sm-2">
                @Html.TextBoxFor(model => model.NroControl,
                                 new
                                     {
                                         @class = "form-control",
                                         placeholder = "Nro Control"
                                     })
            </div>
            <div class="form-group col-sm-2">
            </div>

            

            
        </div>
        <div class="row">
            <div class="col-sm-3">
                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span>&nbsp;&nbsp;Actualizar</button>
            </div>
        </div>
    }
</div>

<style>
	.date-container {
		margin-right: 0 !important;
	}
</style>