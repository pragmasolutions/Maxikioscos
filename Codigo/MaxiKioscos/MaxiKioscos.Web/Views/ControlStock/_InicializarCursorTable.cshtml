@model MaxiKioscos.Web.Models.ControlStockDetalleListadoModel
<script>
    var $currentRow = $('#TableControlStock tbody tr[id=' + '@Model.Filtros.CurrentRowId' + ']');
    
    var options = {
        currentRow: $currentRow,
        actions: [{
                shortcut: 'e', handler: function (e) {
                    var $row = $(e.currentRow);
                    $row.find('a.btn-controlStockDetalle-editar').trigger('click');
                },
            },
            {
                shortcut: 'd', handler: function (e) {
                    var $row = $(e.currentRow);
                    $row.find('a.btn-producto').trigger('click');
                },
            },
            {
                shortcut: 'del', handler: function (e) {
                    var $row = $(e.currentRow);
                    $row.find('a.btn-controlStockDetalle-eliminar').trigger('click');
                },
            }]
    };

    $('#TableControlStock').cursortable(options);
</script>