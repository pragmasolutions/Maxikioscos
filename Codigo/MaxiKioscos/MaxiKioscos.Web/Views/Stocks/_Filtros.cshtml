@using MaxiKioscos.Web.Helpers
@model MaxiKioscos.Web.Models.StockFiltrosModel
@using (Ajax.BeginForm("Index", null,
                                       new AjaxOptions()
                                           {
                                               UpdateTargetId = "AdminContainer",
                                               HttpMethod = "Get",
                                               InsertionMode = InsertionMode.Replace,
                                               OnBegin = "maxikioscoSpinner.startSpin",
                                               OnSuccess = "maxikioscoSpinner.stopSpin",
                                               OnFailure = "maxikioscoSpinner.stopSpin"
                                           },
                                       new { @class = "form-inline", id = "FrmActualizarStock" }))
{
    <div class="form-group">
        @Html.EditorFor(model => model.MaxiKioscoId)
        @if (!IsAjax)
        {
            <text>
            @section scripts
            {
                @Html.SetFocusTo(model => model.MaxiKioscoId)
            }
            </text>
        }
        else
        {
            @Html.SetFocusTo(model => model.MaxiKioscoId)
        }
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.ProductoDescripcion, new { @class = "form-control", placeholder = "Producto" })
    </div>
    <div class="form-group">
        @Html.EditorFor(model => model.ProveedorId)
    </div>
    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span>&nbsp;&nbsp;Buscar</button>
    
    <br/>
    <label>Reposición:</label>
    <div class="form-group">
        @Html.EditorFor(model => model.NecesitaReposicion)
    </div>
    
}