@model MaxiKioscos.Entidades.Proveedor
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Crear Proveedor</h4>
</div>
@using (Html.BeginForm("Crear", "Proveedores"))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                @{Html.RenderPartial("_CamposProveedorEditar"); }
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;&nbsp;Crear</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
    </div>
}
