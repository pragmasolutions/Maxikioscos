@model decimal?
@{
    var currency = Model == 0 ? string.Empty : Model.GetValueOrDefault().ToString("n2");
}
<div class="input-group col-xs-3" style="min-width: 120px">
    <span class="input-group-addon">%</span>
    @Html.TextBox("", currency, new { @class = "form-control autonumeric", data_a_sep = "" , data_a_dec=",", data_v_min = "-99.99" })
</div>
