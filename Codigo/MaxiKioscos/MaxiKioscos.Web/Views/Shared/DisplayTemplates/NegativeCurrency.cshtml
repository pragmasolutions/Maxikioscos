@model decimal?
@{
    var currency = ((Model ?? 0) == 0) ? string.Empty : Model.GetValueOrDefault().ToString("n2");
}
<div class="input-group input-group-currency">
    <span class="input-group-addon">$</span>
    @Html.TextBox("", currency, new { @class = "form-control", @readonly = true, data_a_sep = "", data_a_dec = ",", data_v_min = "-999999999.99999" })
</div>
