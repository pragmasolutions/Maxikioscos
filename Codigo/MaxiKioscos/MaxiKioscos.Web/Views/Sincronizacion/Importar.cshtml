@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Web.Models.ImportacionModel

<link href="~/Scripts/lib/jQuery-File-Upload-9.5.7/css/jquery.fileupload.css" rel="stylesheet" />

<script src="~/Scripts/lib/jQuery-File-Upload-9.5.7/js/vendor/jquery.ui.widget.js"></script>
<script src="~/Scripts/lib/jQuery-File-Upload-9.5.7/js/jquery.iframe-transport.js"></script>
<script src="~/Scripts/lib/jQuery-File-Upload-9.5.7/js/jquery.fileupload.js"></script>

@Html.PopupTitulo("Importar")
@using (Html.BeginForm("Importar", "Sincronizacion"))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <div style="margin-left: 14px;">
                        @Html.LabelFor(model => model.NombreArchivo)
                    </div>
                    <div class="col-lg-6">
                        @Html.EditorFor(model => model.NombreArchivo, new { @disabled = "disabled", @style="width: 50%;"})
                        @Html.ValidationMessageFor(model => model.NombreArchivo)
                    </div>
                    <div class="col-lg-6">
                        <span class="btn btn-success fileinput-button">
                            <i class="glyphicon glyphicon-plus"></i>
                            <span>Seleccionar...</span>
                            <!-- The file input field used as target for the file upload widget -->
                            <input id="fileupload" type="file" name="files">
                        </span>
                    </div>
                </div>
                
                <br>
                <br>
                <!-- The global progress bar -->
                <div id="progress" class="progress">
                    <div class="progress-bar progress-bar-success"></div>
                </div>
                <!-- The container for the uploaded files -->
                <div id="files" class="files"></div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;&nbsp;Importar</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
    </div>
}

