@using MaxiKioscos.Entidades
@using MaxiKioscos.Web.Comun.Extensiones
@model int?

@Html.PopupTitulo("Agregar permiso a rol")
@using (Html.BeginForm("AgregarPermiso", "Roles"))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.Label("Permiso")
                        @Html.DropDownList("PermisoId", new SelectList(ViewBag.ListadoSobrantes as List<Permiso>, "PermisoId", "Nombre", Model), "Seleccione Permiso", new { @data_searchable = "true", @class = "form-control" })
                        @Html.ValidationMessage("PermisoId")
                        @Html.Hidden("RoleId", (int)ViewBag.RoleId)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;&nbsp;Agregar</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
    </div>
}

