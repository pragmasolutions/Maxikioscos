@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Web.Models.UsuarioConPasswordOpcionalModel

@Html.PopupTitulo("Editar Usuario")

@using (Html.BeginForm("Editar", "Usuarios"))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                @{ Html.RenderPartial("_CamposUsuarioEditar"); }
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-save"></span>&nbsp;&nbsp;Editar</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
    </div>  
}