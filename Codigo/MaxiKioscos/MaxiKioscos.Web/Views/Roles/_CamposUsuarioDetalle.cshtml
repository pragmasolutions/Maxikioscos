@using MaxiKioscos.Web.Configuration
@using MaxiKioscos.Web.Comun.Extensiones;
@model MaxiKioscos.Web.Models.UsuarioModel
@Html.HiddenFor(model => model.Usuario.UsuarioId)
@Html.HiddenFor(model => model.Usuario.Identifier)
@Html.HiddenFor(model => model.Usuario.Desincronizado)
@Html.HiddenFor(model => model.Usuario.Eliminado)
@Html.HiddenFor(model => model.Usuario.CuentaId)

<div class="col-lg-6">        
    <div class="form-group">
        @Html.LabelFor(model => model.Usuario.NombreUsuario)
        @Html.DisplayFor(model => model.Usuario.NombreUsuario)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Usuario.Apellido)
        @Html.DisplayFor(model => model.Usuario.Apellido)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Usuario.Nombre)
        @Html.DisplayFor(model => model.Usuario.Nombre)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.RoleName)
        @Html.DisplayFor(model => model.RoleName)
    </div>
    
    @if(Model.RoleId == 3)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.ProveedoresDetalle)
            @Html.DisplayFor(model => model.ProveedoresDetalle)
        </div>
    }
    
</div>


