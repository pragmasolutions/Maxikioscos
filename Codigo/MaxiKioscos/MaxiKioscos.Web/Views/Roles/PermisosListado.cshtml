@using System.Web.Mvc.Html
@using MaxiKioscos.Web.Comun.Extensiones
@model List<MaxiKioscos.Entidades.PermisoRol>

@Html.PaginaTitulo((string)ViewBag.ListAction + " de rol: " + (string)ViewBag.RoleName, "fa-users")
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a class="btn btn-default btn-volver" href="@Url.Action("Index")"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp;Volver a listado de roles</a>
                <a class="btn btn-default btn-reporte-permiso-agregar" href="@Url.Action("AgregarPermiso", new {id = (int) ViewBag.RoleId})"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Agregar Permiso</a>
            </div>
            <div class="panel-body">
                <div class="spacer"></div>
                <div class="spacer"></div>
                @Html.Partial("_PermisosListado", Model)
                <div class="spacer"></div>
            </div>
        </div>
    </div>
</div>
@Html.Hidden("ListAction", (string)ViewBag.ListAction)
@Html.Hidden("RoleId", (int)ViewBag.RoleId)