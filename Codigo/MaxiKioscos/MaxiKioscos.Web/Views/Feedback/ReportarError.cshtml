@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Email.Models.ReportarErrorModel
@Html.PopupTitulo("Reportar un error")
@using (Html.BeginForm("ReportarError", "Feedback", FormMethod.Post))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-sm-12">
                @Html.LabelFor(model => model.EmailAddress)
                <div class="form-group">
                    @Html.EditorFor(model => model.EmailAddress)
                    @Html.ValidationMessageFor(model => model.EmailAddress)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @Html.LabelFor(model => model.Titulo)
                <div class="form-group">
                    @Html.EditorFor(model => model.Titulo)
                    @Html.ValidationMessageFor(model => model.Titulo)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                @Html.LabelFor(model => model.Description)
                <div class="form-group">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="" type="submit" class="btn btn-primary">Reportar</button>
        <button class="btn" data-dismiss="modal">Cancelar</button>
    </div>
}
