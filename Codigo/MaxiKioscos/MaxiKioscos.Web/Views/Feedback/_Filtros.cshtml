@using MaxiKioscos.Web.Helpers
@model MaxiKioscos.Web.Models.TicketErrorFiltrosModel
<div>
    @using (Ajax.BeginForm("Listado", null,
                                           new AjaxOptions()
                                               {
                                                   UpdateTargetId = "ListadoContainer",
                                                   HttpMethod = "GET",
                                                   InsertionMode = InsertionMode.Replace,
                                                   OnBegin = "maxikioscoSpinner.startSpin",
                                                   OnSuccess = "maxikioscoSpinner.stopSpin",
                                                   OnFailure = "maxikioscoSpinner.stopSpin"
                                               },
                                           new { @class = "form-inline" }))
    {
        <table style="width: 100%;">
            <tr>
                <td>
                    @Html.LabelFor(model => model.TicketNro, new { @class = "label-inline" })
                    <div class="form-group" style="padding-left: 10px;">
                        @Html.EditorFor(model => model.TicketNro)
                        @if (!IsAjax)
                        {
                            <text>
                            @section scripts
                            {
                                @Html.SetFocusTo(model => model.TicketNro)
                            }
                            </text>
                        }
                        else
                        {
                            @Html.SetFocusTo(model => model.TicketNro)
                        }
                    </div>
                </td>
                <td>
                    @Html.LabelFor(model => model.Titulo, new { @class = "label-inline" })
                    <div class="form-group" style="padding-left: 10px;">
                        @Html.EditorFor(model => model.Titulo)
                    </div>
                </td>

                <td>
                    @Html.LabelFor(model => model.EstadoId, new { @class = "label-inline" })
                    <div class="form-group" style="padding-left: 10px;">
                        @Html.EditorFor(model => model.EstadoId)
                    </div>
                </td>
                <td>
                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span>&nbsp;&nbsp;Actualizar</button>
                </td>
            </tr>
        </table>
    }
</div>

<style>
    #TicketNro {
        width: 80px;
    }
</style>
