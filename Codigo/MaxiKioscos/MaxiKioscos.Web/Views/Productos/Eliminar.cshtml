@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Entidades.Producto

@Html.PopupTitulo("Eliminar Producto")
@using (Html.BeginForm("Eliminar", "Productos"))
{
    <div class="modal-body">
        <div class="row">
            <div>
                <div class="alert alert-warning">
                    Esta seguro que desea eliminar el siguiente producto?
                </div>
            </div>
        </div>
        @{Html.RenderPartial("_CamposProductoDetalle"); }
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Eliminar</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
    </div>
}

@Scripts.Render("~/Scripts/app/maxikiosco-productos-editar.js")
