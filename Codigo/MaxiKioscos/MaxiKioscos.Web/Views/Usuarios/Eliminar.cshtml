@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Web.Models.UsuarioModel

@Html.PopupTitulo("Eliminar Usuario")

@using (Html.BeginForm("Eliminar", "Usuarios"))
{
    <div class="modal-body">
        <div class="row">
            <div>
                <div class="alert alert-warning">
                    Esta seguro que desea eliminar el usuario?
                </div>
            </div>
            <div class="col-lg-12">
                @{Html.RenderPartial("_CamposUsuarioDetalle"); }
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Eliminar</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
    </div>
}
