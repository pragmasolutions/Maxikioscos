@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Web.Models.CategoriasCostosListadoModel

<h1 class="page-header">
    <i class="glyphicon glyphicon-flag" style="font-size: xx-large;"></i>
    Categorías de Gastos
</h1>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a class="btn btn-default btn-categoriacosto-crear" href="@Url.Action("Crear")"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Crear Categoría de Gasto</a>
            </div>
            
            <div class="panel-body">
                @Html.Partial("_Filtros", Model.Filtros)
                <div class="spacer"></div>
                <div class="spacer"></div>
                @Html.Partial("_Listado", Model)
                <div class="spacer"></div>
            </div>
        </div>
    </div>
</div>