@model MaxiKioscos.Entidades.MaxiKiosco
@Html.HiddenFor(model => model.MaxiKioscoId)
@Html.HiddenFor(model => model.Identifier)
@Html.HiddenFor(model => model.CuentaId)
@{
    var primerTurno = Model.MaxiKioscoTurnos.FirstOrDefault();
}
<div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre)
            @Html.DisplayFor(model => model.Nombre)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Abreviacion)
            @Html.DisplayFor(model => model.Abreviacion)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Direccion)
            @Html.DisplayFor(model => model.Direccion)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Telefono)
            @Html.DisplayFor(model => model.Telefono)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EstaOnLine)
            @Html.DisplayFor(model => model.EstaOnLine)
        </div>
    </div>
</div>

@if (primerTurno != null)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>@Html.DisplayNameFor(modal => primerTurno.MontoMaximoVentaConTickets)</span>
                </div>
                <div class="panel-body">
                    <ul id="CodigosList" class="list-group">
                        @foreach (var maxikioscoTurno in Model.MaxiKioscoTurnos)
                        {
                            <li class="list-group-item">
                                <strong class="">@Html.DisplayTextFor(model => maxikioscoTurno.Turno.Descripcion):</strong> @Html.DisplayFor(model => maxikioscoTurno.MontoMaximoVentaConTickets)
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

