@using MaxiKioscos.Web.Comun.Extensiones
@model MaxiKioscos.Web.Models.ReporteStockModel

@Html.PaginaTitulo("Reporte de Stock Valorizado Mensuales", "fa-bar-chart-o")
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a class="btn btn-default btn-volver" href="@Url.Action("StockValorizadoMensual")"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;&nbsp;Volver a listado</a>
                &nbsp;&nbsp;&nbsp;Mes: @Model.Mes/@Model.Anio
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="TableReportesStockDetalle">
                        <thead>
                        <tr>
                            <th>Reporte</th>
                            <th class="columna-botones"></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Stock Valorizado</td>
                            <td class="text-center">
                                <a class="btn btn-default btn-stock-valorizado" href="@Url.Action("StockValorizadoAutomatico", new {id = Model.ReporteStockId})"><span class="glyphicon glyphicon-list"></span></a>
                            </td>
                        </tr>
                        <tr>
                            <td>Stock Valorizado General</td>
                            <td class="text-center">
                                <a class="btn btn-default btn-stock-valorizado" href="@Url.Action("StockValorizadoGeneralAutomatico", new {id = Model.ReporteStockId})"><span class="glyphicon glyphicon-list"></span></a>
                            </td>
                        </tr>
                        <tr>
                            <td>Stock Valorizado Detallado</td>
                            <td class="text-center">
                                <a class="btn btn-default btn-stock-valorizado" href="@Url.Action("StockValorizadoDetalladoAutomatico", new {id = Model.ReporteStockId})"><span class="glyphicon glyphicon-list"></span></a>
                            </td>
                        </tr>
                        <tr>
                            <td>Stock Valorizado Detallado General</td>
                            <td class="text-center">
                                <a class="btn btn-default btn-stock-valorizado" href="@Url.Action("StockValorizadoDetalladoGeneralAutomatico", new {id = Model.ReporteStockId})"><span class="glyphicon glyphicon-list"></span></a>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div id="ReportContainer" style="display: none;">
                    <iframe id="ReporteIframe" style="width: 1000px; height: 500px; margin-top: 10px;" />
                </div>
            </div>
        </div>
    </div>
</div>
